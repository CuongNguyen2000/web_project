                                                <!-- Tab variant tab card start -->
                                                <div class="card">

                                                    <div class="card-header">
                                                        <div class="card-header-left ">
                                                        </div>
                                                        <div class="card-header-right">
                                                            <ul class="list-unstyled card-option">
                                                                <li><i class="icofont icofont-simple-left "></i>
                                                                </li>
                                                                <li><i class="icofont icofont-maximize full-card"></i>
                                                                </li>
                                                                <li><i class="icofont icofont-minus minimize-card"></i>
                                                                </li>
                                                                <li><i class="icofont icofont-refresh reload-card"></i>
                                                                </li>
                                                                <li><i class="icofont icofont-error close-card"></i>
                                                                </li>
                                                            </ul>
                                                        </div>
                                                    </div>
                                                    <div class="card-block">
                                                        <div style=" display: flex;align-items: center;">
                                                            <img class="card-img-top"
                                                                style="display: block;margin-left: auto;margin-right: auto;width: 200px;height: 250px;"
                                                                src="/uploads/{{value.articleImage}}" alt="image cap">
                                                        </div>
                                                        <div class="card-body">
                                                            <h5 class="card-title">Title: {{value.name}}</h5>
                                                            <p class="card-text">Description: {{value.desc}}</p>
                                                            <p class="card-text">Topic: {{value.topic_id.name}}</p>
                                                        </div>
                                                    </div>



                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <div class="card">
                                                    <div class="card-block">
                                                        <h3 class="sub-title">Leave a comment</h3>
                                                        <form action="/coordinators/do_comment" method="POST"
                                                            enctype="application/x-www-form-urlencoded"
                                                            onsubmit="doComment(this);">
                                                            <div class="form-group">
                                                                <textarea class="form-control" name="comment" id=""
                                                                    rows="6"></textarea>
                                                            </div>
                                                            <input type="hidden" id="_id" name="_id"
                                                                value="{{value._id}}">

                                                            <button type="submit" class="btn btn-primary"
                                                                id="submit_info">Submit</button>
                                                        </form>
                                                    </div>
                                                </div>
                                                {{#if value.comments}}
                                                <div class="card">
                                                    <div class="card-header">
                                                        <h5>List of Comments: </h5>
                                                        <div class="card-header-left ">
                                                        </div>
                                                        <div class="card-header-right">
                                                            <ul class="list-unstyled card-option">
                                                                <li><i class="icofont icofont-simple-left "></i>
                                                                </li>
                                                                <li><i class="icofont icofont-maximize full-card"></i>
                                                                </li>
                                                                <li><i class="icofont icofont-minus minimize-card"></i>
                                                                </li>
                                                                <li><i class="icofont icofont-refresh reload-card"></i>
                                                                </li>
                                                                <li><i class="icofont icofont-error close-card"></i>
                                                                </li>
                                                            </ul>
                                                        </div>
                                                    </div>
                                                    {{#each value.comments}}
