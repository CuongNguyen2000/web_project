                                                        <div class="media mb-4">
                                                            <img style="width: 50px; height: 50px"
                                                                class="d-flex mr-3 rounded-circle"
                                                                src="/images/gallery/03.jpg" alt="image">
                                                            <div class="media-body">
                                                                <h5 style="display: inline" class="mt-0">
                                                                    You have make a comment at</h5>
                                                                <span
                                                                    style="display: inline; color: rgb(184, 183, 183)">-
                                                                    {{timeCreated}}
                                                                </span><br>
                                                                <h5>{{comment}}</h5>
                                                            </div>
                                                            <div class="icon-btn">
                                                                <form action="/coordinators/delete_comment"
                                                                    method="POST"
                                                                    enctype="application/x-www-form-urlencoded">
                                                                    <input type="hidden" name="_id" value={{_id}}>
                                                                    <input type="hidden" name="_method" value="DELETE">
                                                                    <button type="submit"
                                                                        class="btn btn-danger btn-outline-danger btn-icon">
                                                                        <i class="ti-close"></i>
                                                                    </button>
                                                                </form>
                                                            </div>
                                                        </div>
                                                        <hr>
                                                    </div>
                                                    {{/each}}
                                                </div>

                                                {{else}}
                                                <div class="card">
                                                    <div class="card-block">
                                                        <div class="alert alert-info" role="alert">
                                                            This is no feedback!
                                                        </div>
                                                    </div>
                                                </div>
                                                {{/if}}
                                                <script>
                                                    function doComment(form) {
                                                        $.ajax({
                                                            url: "/coordinators/do_comment",
                                                            method: "POST",
                                                            data: { comment: form.comment.value },
                                                            _id: form._id.value,
                                                            success: function (res) {
                                                                alert("Comment Successfully !!!");
                                                            }
                                                        });
                                                        return false;
                                                    }
                                                </script>
