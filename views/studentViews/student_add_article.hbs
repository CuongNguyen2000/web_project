    <script>
        function disableSubmit() {
            // Get the checkbox
            var checkBox = document.getElementById("myCheck");
            // Get the output text
            var text = document.getElementById("submit");

            // If the checkbox is checked, display the output text
            if (checkBox.checked == true) {
                text.disabled = false;
            } else {
                text.disabled = true;
            }
        }
    </script>
