                    <div class="pcoded-content">
                        <div class="pcoded-inner-content">
                            <div class="main-body">
                                <div class="page-wrapper">
                                    <div class="page-body">
                                        <!-- Page-header start -->
                                        <div class="page-header card">
                                            <div class="row align-items-end">
                                                <div class="col-lg-8">
                                                    <div class="page-header-title">
                                                        <i class="icofont icofont-table bg-c-blue"></i>
                                                        <div class="d-inline">
                                                            <h4>Insert new Article</h4>
                                                            <span>Adding new Article</span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-lg-4">
                                                    <div class="page-header-breadcrumb">
                                                        <ul class="breadcrumb-title">
                                                            <li class="breadcrumb-item">
                                                                <a href="/students/home">
                                                                    <i class="icofont icofont-home"></i>
                                                                </a>
                                                            </li>
                                                            <li class="breadcrumb-item"><a
                                                                    href="/students/list_articles">List of
                                                                    Articles</a>
                                                            </li>
                                                            <li class="breadcrumb-item">
                                                                <a href="#!">Adding new article</a>
                                                            </li>
                                                        </ul>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <!-- Page-header end -->
                                        <div class="row">
                                            <div class="col-sm-12">
                                                <!-- Tab variant tab card start -->
                                                <div class="card">
                                                    <div class="card-block">
                                                        <h3 class="sub-title">Upload new Article</h3>
                                                        <form id="uploadForm" action="/students/add_article"
                                                            method="POST" enctype="multipart/form-data">
                                                            {{#if err}}
                                                            <div class="alert alert-danger" role="alert"
                                                                style="width: auto;">
                                                                {{err}}
                                                            </div>
                                                            {{else}}
                                                            <div class="form-group row">
                                                                <label class="col-sm-2 col-form-label">Article
                                                                    Title</label>
                                                                <div class="col-sm-10">
                                                                    <input type="text" class="form-control"
                                                                        placeholder="Enter name of your Article"
                                                                        id="name" name="name" required>
                                                                </div>
                                                            </div>
                                                            <div class="form-group row">
                                                                <label
                                                                    class="col-sm-2 col-form-label">Description</label>
                                                                <div class="col-sm-10">
                                                                    <textarea id="desc" name="desc" rows="5" cols="5"
                                                                        class="form-control"
                                                                        placeholder="Describe your article"
                                                                        required></textarea>
                                                                </div>
                                                            </div>
                                                            <div class="form-group row">
                                                                <label class="col-sm-2 col-form-label">Upload File: You
                                                                    can upload image
                                                                    file or PDF file</label>
                                                                <div class="col-sm-10">
                                                                    <input name="image" id="image" type="file"
                                                                        class="form-control" required>
                                                                </div>
                                                            </div>

                                                            <div class="checkbox-fade fade-in-primary d-block">
                                                                <label class="check-task d-block">
                                                                    <input type="checkbox" name="myCheck" id="myCheck"
                                                                        value="" onclick="disableSubmit()">
                                                                    <span class="cr">
                                                                        <i
                                                                            class="cr-icon icofont icofont-ui-check txt-default"></i>
                                                                    </span>
                                                                    <span>
                                                                        <h6>I have read and
                                                                            agree to the <a
                                                                                href="/students/term_and_conditions"
                                                                                style="text-decoration: none;">Terms and
                                                                                Conditions</a></h6>
                                                                    </span>
                                                                </label>
                                                            </div>
                                                            <button id="submit" type="submit"
                                                                class="btn btn-primary waves-effect" data-type="success"
                                                                data-from="top" data-align="right"
                                                                disabled>Submit</button>

                                                            <input type="hidden" id="_id" name="_id"
                                                                value="{{topic._id}}">
                                                            {{/if}}
                                                        </form>
                                                    </div>
                                                    {{!-- card-block end --}}
                                                </div>
                                            </div>
                                        </div>
                                        <!-- Tab variant tab card start -->
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

