                                <li class="nav-item active">
                                    <a class="nav-link" href="/users/student/home">
                                        Home
                                        <span class="sr-only">(current)</span>
                                    </a>
                                </li>
                                <li class="nav-item ">
                                    <a class="nav-link" href="/users/student/list_articles">
