                            </form> --}}
                        </div>
                    </nav>
                </div>
            </div>
        </div>

        <main>
            <header class="row tm-welcome-section">
                <h2 class="col-12 text-center tm-section-title">List of Your Articles</h2>
                <div class="col-12 text-center tm-section-title">
                    <button type="button" class="btn btn-success"
                        onclick="window.location='/users/student/add_article';">
                        Add more article
                    </button>
                </div>
            </header>
            <div class="border rounded" style="width: auto;">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <td colspan="5">
                                    <h2>Uploaded Images</h2>
                                </td>
                            </tr>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Article Image</th>
                                <th scope="col">Article Name</th>
                                <th scope="col">Description</th>
                                <th scope="col">Created date</th>
                                <th scope="col">Option</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each items}}
                            <tr>
                                <th scope="row">{{@index}}</th>
                                <td> <img src="/uploads/{{this.articleImage}}" alt="Image" class="reSize" /></td>
                                <td>{{name}}</td>
                                <td>{{desc}}</td>
                                <td>{{timeCreated}}</td>
                                <td class="d-flex flex-row">
                                    <a href="/uploads/{{this.articleImage}}"> <button type="submit"
                                            class="btn btn-primary">Detailed</button></a>
                                    <form action="/users/student/delete_article" method="POST"
                                        enctype="application/x-www-form-urlencoded">
                                        <input type="hidden" name="_id" value={{_id}}>
                                        <input type="hidden" name="_method" value="DELETE">
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </form>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>


