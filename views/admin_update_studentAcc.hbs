        <main>
            <div class="border rounded" style="width: auto;">
                <div style="padding: 20px;">
                    <h1>Update Student Account</h1>
                    <hr>
                    <form action="/users/admin/update_student_account" method="POST"
                        enctype="application/x-www-form-urlencoded">
                        <div class="form-group">
                            <label for="usr">Username: <span class="changeStyle">{{data.user.username}}</span></label>
                            <input type="text" class="form-control" id="usr" name="usr">
                        </div>
                        <div class="form-group">
                            <label for="pwd">Password</label>
                            <div class="input-group mb-3">
                                <input type="password" class="form-control" id="pwd" name="pwd" onkeyup="check();">
                                <div class="input-group-append">
                                    <button class="btn btn-outline-secondary" type="button" id="btnPassword">
                                        <span class="fas fa-eye"></span>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="repwd">Re-enter Password</label>
                            <div class="input-group mb-3">
                                <input type="password" class="form-control" id="repwd" name="repwd" onkeyup="check();">
                                <div class="input-group-append">
                                    <button class="btn btn-outline-secondary" type="button" id="btnRePassword">
                                        <span class="fas fa-eye"></span>
                                    </button>
                                </div>
                            </div>
                            <span id="message"></span>
                        </div>
                        <input type="hidden" name="_method" value="PUT">
                        <input type="hidden" name="_id" value="{{data.user._id}}">
                        <button type="submit" class="btn btn-primary" id="submit_acc">Update</button>
                    </form>
                    <hr>
                    <h1>Change Student Information</h1>
                    <hr>
                    <form action="/users/admin/update_student_information" method="POST"
                        enctype="application/x-www-form-urlencoded">
                        <div class="form-group">
                            <label for="name">Name: <span class="changeStyle">{{data.info.name}}</span> </label>
                            <input type="text" class="form-control" id="name" name="name">
                        </div>
                        <div class="form-group">
                            <label for="email">Email: <span class="changeStyle">{{data.info.email}}</span> </label>
                            <input type="email" class="form-control" id="email" name="email">
                        </div>
                        <input type="hidden" name="_method" value="PUT">
                        <input type="hidden" name="_id" value="{{data.user._id}}">
                        <button type="submit" class="btn btn-primary" id="submit_info">Update</button>
                    </form>
                    <br><br>
